@model Shop.Models.AdminViewModels.SellerEditViewModel

@{
    ViewData["Title"] = "Chỉnh sửa người bán hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="wrapper">
    <h1 class="text-center"></h1>

    <section class="panel">
        <header class="panel-heading">Thông tin về người bán @Model.Name</header>
        <div class="panel-body">
            <div class="form-horizontal bucket-form">
                <div class="form-group">
                    <label class="col-sm-3 control-label">ID (không thể chỉnh sửa)</label>
                    <div class="col-sm-6">
                        <input type="text" asp-for="SellerId" class="form-control" readonly>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Tên người bán hàng</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Name" readonly>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Email</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Email" readonly>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-sm-3 control-label">Số điện thoại</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="PhoneNumber" readonly>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Tên đường</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Street" readonly>
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Số nhà</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="ApartmentNumber" readonly>
                        <span asp-validation-for="ApartmentNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Postcode</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Postcode" readonly>
                        <span asp-validation-for="Postcode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Thành phố</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="City" readonly>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Mô tả ngắn</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Description" readonly>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Logo</label>
                    <div class="col-sm-6">
                        <img src="@Model.LogoPath" alt="Logo" class="img-thumbnail max-height-350px">
                    </div>
                </div>



            </div>
        </div>
    </section>
</section>
