@model Shop.Models.AdminViewModels.ReceiptOverviewViewModel

@{
    ViewData["Title"] = "Tổng quan biên lai";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="wrapper">
    @if (Model.AllReceiptSortedById == null || !Model.AllReceiptSortedById.Any())
    {
        <h1 class="text-center mtb-40">Hiện tại không có biên lai trong hệ thống!</h1>
        <a asp-controller="Admin" asp-action="AddReceipt"><h3 class="text-center">Thêm biên lai thủ công.</h3></a>
    }
    else
    {
        <div class="text-center">
            <h1><i class="fas fa-search"></i> Tìm kiếm theo tên</h1>
            <input onkeyup="searchInTableFunction()" type="text" class="ggg max-width-500px" id="searchInTableTextField" placeholder="Nhập tên của biên lai hoặc người bán">
        </div>
        <div class="table-agile-info">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Biên lai trên 3BrosShop
                </div>
                <div>
                    <table class="table" id="tableToSearch">
                        <thead>
                            <tr>
                                <th>Tên trong biên lai</th>
                                <th>Tên người bán</th>
                                <th>Thành phố</th>
                                <th>Số lượng đã bán</th>
                                <th>Chi tiét</th>
                            </tr>
                        </thead>
                        @foreach (var receipt in Model.AllReceiptSortedById)
                        {
                            <tbody>
                                <tr>
                                    <td>@receipt.ReceiptName</td>
                                    <td>@receipt.Name</td>
                                    <td>@receipt.Ciy</td>
                                    <td>@receipt.NumberofReceiptinSystem</td>
                                    <td><a asp-controller="Admin" asp-action="ReceiptEdit" asp-route-id="@receipt.Id"><i class="fas fas fa-ellipsis-h"></i></a></td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    }
</section>