@model Shop.Models.AdminViewModels.UsersViewModel

@{
    ViewData["Title"] = "Người bán hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="wrapper">
    <h1 class="text-center"></h1>

    <section class="panel">
        <header class="panel-heading">Chi tiết người người dùng</header>
        <div class="panel-body">
            <form method="post" enctype="multipart/form-data" class="form-horizontal bucket-form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">người dùng (không thể chỉnh sửa)</label>
                    <div class="col-sm-6">
                        <input type="text" asp-for="User.UserName" class="form-control" readonly>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Quyền</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" id="9" asp-for="RoleName" readonly>
               
                    </div>
                    <div class="col-sm-1">
                        <a onclick="ToggleReadOnly('9')" class="clickable"><i id="9icon" class="fas fa-lock"></i></a>
                    </div>
                </div>

                
                <div class="col-md-9 col-md-offset-3">
                    <a asp-controller="Admin" asp-action="Users" class="btn btn-warning mr-20">Hủy bỏ</a>
                    <button type="submit" class="btn btn-success">Thay đổi</button>
                </div>
            </form>
        </div>
    </section>
</section>

<script>
    $("#fileToUpload").change(function () {
        document.getElementById('fileselectionText').innerHTML = 'Bạn đã chọn một logo mới';
    });
</script>
