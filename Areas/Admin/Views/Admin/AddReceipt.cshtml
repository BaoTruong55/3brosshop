@model Shop.Models.AdminViewModels.ManuallyNewReceiptViewModel

@{
    ViewData["Title"] = "Thêm biên lai";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="wrapper">
    <h1 class="text-center"></h1>

    <section class="panel">
        <header class="panel-heading">Thêm biên lai</header>
        <div class="panel-body">
            <form class="form-horizontal bucket-form" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Mã người bán</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="SellerId">
                        <span asp-validation-for="SellerId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Tên người nhận</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Mô tả người nhận biên lai</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Giá thấp nhất</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Giá cao nhất</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="MaximumPrice">
                        <span asp-validation-for="MaximumPrice" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" asp-for="Category"></label>
                    <div class="col-sm-6">
                        <select class="form-control" asp-for="Category" asp-items="@(ViewData["category"] as SelectList)">
                            <option value="">--- Chọn danh mục ---</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Tên đường</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Street">
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Số nhà</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="ApartmentNumber">
                        <span asp-validation-for="ApartmentNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Postcode</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Postcode">
                        <span asp-validation-for="Postcode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Thành phố</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="City">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" asp-for="Offer"></label>
                    <div class="col-sm-6">
                        <select class="form-control" asp-for="Offer" asp-items="@(ViewData["offer"] as SelectList)">
                            <option value="">--- Chọn loại ---</option>
                        </select>
                        <span asp-validation-for="Offer" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Hình thu nhỏ</label>
                    <div class="col-sm-6">
                        <label class="btn btn-default" id="fileselection">
                            <a class="" id="fileselectionText">Selecteer een thumbnail</a><input asp-for="Thumbnail" accept=".jpg" id="fileToUpload" style="display: none;">
                        </label>
                        <span asp-validation-for="Thumbnail" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Hình ảnh</label>
                    <div class="col-sm-6">
                        <label class="btn btn-default" id="fileselection2">
                            <a class="" id="fileselectionTekst2">Selecteer imageen</a><input asp-for="Image" accept=".jpg" id="fileToUpload2" style="display: none;">
                        </label>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-9 col-md-offset-3">
                    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-danger mr-20">Hủy bỏ</a>
                    <button type="submit" class="btn btn-success">Thêm</button>
                </div>
            </form>
        </div>
    </section>
</section>

<script>
    $("#fileToUpload").change(function () {
        document.getElementById('fileselectionText').innerHTML = 'Bạn đã chọn 1 hình';
    });
</script>

<script>
    $("#fileToUpload2").change(function () {
        document.getElementById('fileselectionTekst2').innerHTML = 'Bạn đã chọn 1 hình';
    });
</script>