
@{
    Layout = null;
}
@model Shop.Models.AdminViewModels.LoginViewModel
<!DOCTYPE html>
<html>
<head>
    <title>Admin panel 3Bros Shop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <!-- bootstrap-css -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <!-- //bootstrap-css -->
    <!-- Custom CSS -->
    <link href="~/admin/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/admin/css/style-responsive.css" rel="stylesheet" />
    <!-- font CSS -->
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <!-- font-awesome icons -->
    <link rel="stylesheet" href="~/admin/css/font.css" type="text/css" />
    <link href="~/vendors/font-awesome/css/fontawesome-all.min.css" rel="stylesheet">
    <!-- //font-awesome icons -->
    <script src="~/js/jquery-1.12.3.min.js"></script>
</head>
<body>
    <div class="log-w3">
        <div class="w3layouts-main">
            <h2>Admin Panel 3BrosShop</h2>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Email" type="text" class="ggg" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Password" type="password" class="ggg" placeholder="Mật khẩu">
                <span asp-validation-for="Password" class="text-danger"></span>
                <h6>
                    <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-pass-link color-blue">Quên mật khẩu</a>
                </h6>
                <div class="clearfix"></div>
                <input type="submit" value="Đăng nhập">
            </form>
        </div>
    </div>
    <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
    <script src="~/admin/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/admin/js/scripts.js"></script>
    <script src="~/admin/js/jquery.slimscroll.js"></script>
    <script src="~/admin/js/jquery.nicescroll.js"></script>
    <script src="~/admin/js/jquery.scrollTo.js"></script>
</body>
</html>
