@model Shop.Models.AdminViewModels.OverviewUsedOrderViewModel
@{
    ViewData["Title"] = "Hóa đơn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="wrapper">
    @if (Model.UsedOrderList == null || !Model.UsedOrderList.Any())
    {
        <h1 class="text-center mtb-40 color-white">Hiện  tại không có hóa đơn!</h1>
    }
    else
    {
        <div class="text-center">
            <h1><i class="fas fa-search"></i> Tìm kiếm theo tên</h1>
            <input onkeyup="searchInTableFunction()" type="text" class="ggg max-width-500px" id="searchInTableTextField" placeholder="Nhập tên theo hóa đơn">
        </div>
        <div class="table-agile-info">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Gebruikte Cadeaureceiptnen
                </div>
                <div>
                    <table class="table" id="tableToSearch">
                        <thead>
                            <tr>
                                <th>Ngày</th>
                                <th>Hóa đơn</th>
                                <th>Số tiền</th>
                                <th>Trạng thái</th>
                                <th>Chi tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bon in Model.UsedOrderList)
                            {
                                <tr>
                                    <th scope="row">@bon.Date</th>
                                    <td>
                                        @bon.Name
                                    </td>
                                    <td>
                                        <h5>&euro; @bon.Amount</h5>
                                    </td>
                                    <td>
                                        <span class="label @bon.StatusClass">@bon.Status</span>
                                    </td>
                                    <td><a asp-controller="Admin" asp-action="SoldReceiptView" asp-route-id="@bon.Id"><i class="fas fas fa-ellipsis-h"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</section>