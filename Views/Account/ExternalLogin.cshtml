@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Tạo tài khoản";
    ViewData["Navbar"] = "Account";
}

<div class="page-container ptb-60">
    <div class="container width-625">
        <section class="sign-area panel p-40">
            <h2>@ViewData["Title"]</h2>
            <h4>Liên kết của bạn @ViewData["LoginProvider"] tài khoản.</h4>
            <hr />

            <p class="text-info mb-0">
                Bạn đã hoàn thành <strong>@ViewData["LoginProvider"]</strong> hồ sơ đến trang web này.
            </p>
            <p class="text-info mt-0">
                Vui lòng nhập các chi tiết dưới đây và xác nhận để tiếp tục.
            </p>


            <div class="row">
                <div class="col-md-12">
                    <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input class="form-control input-lg" placeholder="FirstFirstName" asp-for="FirstName">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FamilyName"></label>
                            <input class="form-control input-lg" placeholder="FamilyFirstName" asp-for="FamilyName">
                            <span asp-validation-for="FamilyName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Sex"></label>
                            <select class="form-control input-lg search-select" asp-for="Sex" asp-items="@(ViewData["Sex"] as SelectList)"></select>
                            <span asp-validation-for="Sex" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-default">Xác nhận</button>
                    </form>
                </div>               
            </div>
    </section>
</div>
</div>
