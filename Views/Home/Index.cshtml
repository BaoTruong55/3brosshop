@using Shop.Models.Domain

@model Shop.Models.HomeViewModels.IndexViewModel

@{
    ViewData["Title"] = "Home";
    ViewData["Navbar"] = "Home";
}

<main id="mainContent" class="main-content">
    <div class="page-container ptb-10">
        <div class="container">
            <div class="section deals-header-area ptb-30">
                <div class="row row-tb-20">
                    <div class="col-xs-12 col-md-4 col-lg-3">
                        <aside>
                            <ul class="nav-coupon-category panel">
                                <li class="all-cat">
                                    <a class="font-14">
                                        Danh mục phổ biến
                                    </a>
                                </li>
                                @foreach (var categorie in Model.Top9Category)
                                {
                                    <li>
                                        <a asp-controller="Home" asp-action="Search" asp-route-SearchType="Category" asp-route-SearchKey="@categorie.CategoryName" class="animatedCategorie"><i class="fa @categorie.Icon"></i>@categorie.CategoryName<span>@categorie.Number</span></a>
                                    </li>
                                }
                            </ul>
                        </aside>
                    </div>
                    <div class="col-xs-12 col-md-8 col-lg-9">
                        <div class="header-deals-slider owl-slider owl-slider-index-header" data-loop="true" data-autoplay="true" data-autoplay-timeout="7500" data-smart-speed="1000" data-nav-speed="false" data-nav="true" data-xxs-items="1" data-xxs-nav="true" data-xs-items="1" data-xs-nav="true" data-sm-items="1" data-sm-nav="true" data-md-items="1" data-md-nav="true" data-lg-items="1" data-lg-nav="true">
                            @foreach (var bon in Model.SliderItems)
                            {
                                <div class="deal-single panel item">
                                    <figure class="deal-thumbnail embed-responsive embed-responsive-16by9" data-bg-img="@bon.GetThumbPath.Replace("\\","\\\\")">
                                        <div class="deal-about p-20 pos-a bottom-0 left-0">
                                            <div class="rating mb-10">
                                                <span class="rating-stars" data-rating="5">
                                                    <i class="fa fa-star-o star-active"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                </span>
                                                <span class="rating-reviews color-light">
                                                    ( <span class="rating-count">@bon.QuantityOrdered</span> keer verkocht)
                                                </span>
                                            </div>
                                            <h3 class="deal-title mb-10">
                                                <a asp-controller="Home" asp-action="Detail" asp-route-id="@bon.ItemsId" class="btntop3 color-light color-h-lighter">@bon.Name</a>
                                            </h3>
                                            <h8 class="deal-title mb-10">
                                                <a asp-controller="Home" asp-action="Detail" asp-route-id="@bon.ItemsId" class="btntop3 color-light color-h-lighter">Bekijk details</a>
                                            </h8>
                                        </div>
                                    </figure>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
            <div class="section explain-process-area ptb-30">
                <div class="row row-rl-10">
                    <div class="col-md-4 wow bounceInUp" data-wow-delay=".1s">
                        <div class="item panel prl-15 ptb-20">
                            <div class="row row-rl-5 row-xs-cell">
                                <div class="col-xs-4 valign-middle">
                                    <img class="pr-10" src="/images/icons/pijlers/tablet.png" alt="">
                                </div>
                                <div class="col-xs-8">
                                    <h5 class="mb-10 pt-5">Bộ sưu tập quà tặng</h5>
                                    <p class="color-mid">
                                        Chọn điểm quà tặng lý tưởng từ người bán hàng địa phương của bạn.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 wow bounceInUp" data-wow-delay=".2s">
                        <div class="item panel prl-15 ptb-20">
                            <div class="row row-rl-5 row-xs-cell">
                                <div class="col-xs-4 valign-middle">
                                    <img class="pr-10" src="~/images/icons/pijlers/money.png" alt="">
                                </div>
                                <div class="col-xs-8">
                                    <h5 class="mb-10 pt-5">Thanh toán an toàn</h5>
                                    <p class="color-mid">
                                        Phương thức thanh toán khác nhau, có hoặc không có đăng ký.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 wow bounceInUp" data-wow-delay=".3s">
                        <div class="item panel prl-15 ptb-20">
                            <div class="row row-rl-5 row-xs-cell">
                                <div class="col-xs-4 valign-middle">
                                    <img class="pr-10" src="~/images/icons/pijlers/giftcard.png" alt="">
                                </div>
                                <div class="col-xs-8">
                                    <h5 class="mb-10 pt-5">
                                        Thưởng thức một sản phẩm tốt đẹp
                                    </h5>
                                    <p class="color-mid">
                                        In giấy chứng nhận quà tặng cá nhân của bạn &amp;     thưởng thức!
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <section class="section latest-deals-area ptb-30 font-18">
                <header style="background-color: #1E90FF" class="panel ptb-15 prl-20 pos-r mb-30">
                    <h3 style="color: white" class="section-title">
                        Mặt hàng bán nhiều nhất
                        <element class="slide-navigation-brosshop"><a class="vorige-slide-index-grid"><i class="fa fa-arrow-circle-left"></i > trước đó </a> | <a class="volgende-slide-index-grid"> kế tiếp <i class="fa fa-arrow-circle-right"></i></a></element>
                    </h3>
                </header>
                <div class="row row-masnory row-tb-20 lekkerLokaal-driexdrierow">
                    @foreach (var bon in Model.Top30Items)
                    {
                        <div class="slick-lekker-lokaal">
                            <div class="col-xs-12">
                                <div class="coupon-item">
                                    <div class="coupon-single panel t-center">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="text-center p-20">
                                                    <img class="store-logo foto" src="~/@bon.GetThumbPath" alt="">
                                                </div>
                                            </div>
                                            <div class="col-xs-12">
                                                <div class="panel-body">
                                                    <ul class="deal-meta list-inline mb-10">
                                                        <li class="color-muted"><i class="ico fab fa-periscope mr-5"></i>@bon.City</li>
                                                        <li class="color-muted"><i class="ico lnr lnr-users mr-5"></i>@bon.QuantityOrdered</li>
                                                    </ul>

                                                    <div class="height-70px">
                                                        <h4 class="color-blue mb-10 t-uppercase">@bon.Name</h4>
                                                    </div>
                                                    <div class="height-70px">
                                                        <h5 class="deal-title mb-10">
                                                            <a>@bon.Description</a>
                                                        </h5>
                                                    </div>
                                                    <div class="DynamicAddCartRegionCart height-150px" style="display: none;" id="@(bon.ItemsId.ToString() + "card")">
                                                        <form name="WinkelmandjeAdder" onsubmit='return AddToShoppingCartBasket(@bon.ItemsId, "@bon.GetThumbPath.Replace("\\","\\\\")", "@bon.Name");'>
                                                            <div class="PopupAddToCart-line">
                                                                <div class="col-xs-4 no-padding">
                                                                    <label class="float-left ">Giá :</label>
                                                                </div>
                                                                <div class="col-xs-offset-1 col-xs-7 no-padding">
                                                                    <input required id="@(bon.ItemsId.ToString() + "PriceField")" step="0.01" class="form-control winkelmand-register-enter" type="number" value="@(bon.Price.ToString().Replace(",","."))" readonly>
                                                                </div>
                                                            </div>
                                                            <div class="PopupAddToCart-line">
                                                                <div class="col-xs-4 no-padding">
                                                                    <label class="float-left">Số lượng :</label>
                                                                </div>
                                                                <div class="col-xs-offset-1 col-xs-7 no-padding">
                                                                    <input required id="@(bon.ItemsId.ToString() + "QuantityField")" class="form-control winkelmand-register-enter" type="number" min="1" max="100" value="1">
                                                                </div>
                                                            </div>
                                                            <div class="col-xs-4 showcode no-padding">
                                                                <a onclick="DynamicAddCartRegion(@bon.ItemsId);" class="btn btn-sm btn-block" id="@(bon.ItemsId.ToString() + "TerugKnop")" readonly>
                                                                    Quay lại
                                                                </a>
                                                            </div>
                                                            <div class="col-xs-offset-1 col-xs-7 showcode no-padding">
                                                                <input name="Submit" type="submit" value="Xác nhận" class="btn btn-sm btn-block" id="@(bon.ItemsId.ToString() + "BevestigKnop")"/>
                                                            </div>
                                                        </form>
                                                    </div>
                                                    <div class="DynamicAddCartRegionDefault height-150px" id="@(bon.ItemsId.ToString() + "default")">
                                                        <p class="color-muted font-12"><i class="fa @bon.CategoryIcon"></i> @bon.CategoryName</p>
                                                        <p class="mb-15 color-muted mb-20 font-12"><i class="fa fa-credit-card-alt"></i> Giá @bon.Price vnđ</p>
                                                        <div class="showcode">
                                                            <a asp-controller="Home" asp-action="Detail" asp-route-id="@bon.ItemsId" class="btn btn-sm btn-block">
                                                                Xem chi tiết
                                                            </a>
                                                        </div>
                                                        <div style="margin-top: 10px" class="showcode">
                                                            <a onclick="DynamicAddCartRegion(@bon.ItemsId);" class="btn btn-sm btn-block">
                                                                giỏ hàng
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>
</main>
